<div class="max-w-6xl mx-auto px-6 py-10 bg-gray-50 min-h-screen font-inter">
  <!-- Header -->
  <div class="flex items-center justify-between mb-10">
    <h1 class="text-4xl font-extrabold text-gray-900 flex items-center gap-3">
      üìä My Job Tracker Dashboard
    </h1>
    <%= link_to "Add New Job", new_job_path, class: "px-5 py-2 bg-blue-600 text-white font-medium rounded-xl shadow hover:bg-blue-700 transition" %>
  </div>

  <!-- Stats Section -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
    <% stats = [
      { title: "Total Jobs", value: @total_jobs, color: "blue", icon: "üíº" },
      { title: "Pending", value: @pending_jobs, color: "amber", icon: "‚è≥" },
      { title: "Interview", value: @interview_jobs, color: "green", icon: "üéØ" },
      { title: "Rejected", value: @rejected_jobs, color: "rose", icon: "‚ùå" }
    ] %>

    <% stats.each do |s| %>
      <div class="group relative bg-gradient-to-br from-<%= s[:color] %>-100 to-white border border-<%= s[:color] %>-200 p-6 rounded-2xl shadow hover:shadow-lg hover:-translate-y-1 transition duration-300">
        <div class="absolute right-4 top-4 text-<%= s[:color] %>-300 text-5xl opacity-10 select-none"><%= s[:icon] %></div>
        <h2 class="text-lg font-semibold text-<%= s[:color] %>-900"><%= s[:title] %></h2>
        <p class="text-4xl font-extrabold text-<%= s[:color] %>-700 mt-3 group-hover:scale-105 transition-transform duration-300">
          <%= s[:value] %>
        </p>
      </div>
    <% end %>
  </div>

  <!-- Chart & Filters Section -->
  <div class="bg-white rounded-2xl shadow p-8 border border-gray-100 mb-10">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-semibold text-gray-800 flex items-center gap-2">
        üìà Applications Overview
      </h2>
      <div class="flex gap-3">
        <%= select_tag :time_range, options_for_select(["Last 7 days", "Last 30 days", "This Year"]), class: "border-gray-300 rounded-lg text-sm py-1.5" %>
        <%= select_tag :status_filter, options_for_select(["All", "Pending", "Interview", "Rejected"]), class: "border-gray-300 rounded-lg text-sm py-1.5" %>
      </div>
    </div>

    <div class="h-72 flex items-center justify-center text-gray-400 border-2 border-dashed border-gray-200 rounded-xl">
      <%= line_chart [
        { name: "Applications", data: @applications_over_time },
        { name: "Interviews", data: @interviews_over_time }
      ], colors: ["#3b82f6", "#22c55e"], height: "250px", library: { tension: 0.4, plugins: { legend: { position: 'bottom' } } } %>
    </div>
  </div>

  <!-- Recent Applications Table -->
  <div class="bg-white rounded-2xl shadow p-8 border border-gray-100">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-semibold text-gray-800 flex items-center gap-2">üìù Recent Applications</h2>
      <%= link_to "View All ‚Üí", jobs_path, class: "text-sm text-blue-600 hover:text-blue-800 font-medium" %>
    </div>

    <% if @recent_jobs.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full text-left border-collapse">
          <thead>
            <tr class="border-b text-sm text-gray-600 uppercase tracking-wide bg-gray-50">
              <th class="py-3 px-4">Company</th>
              <th class="py-3 px-4">Position</th>
              <th class="py-3 px-4">Status</th>
              <th class="py-3 px-4">Applied On</th>
            </tr>
          </thead>
          <tbody class="text-gray-700">
            <% @recent_jobs.each do |job| %>
              <tr class="border-b hover:bg-gray-50 transition">
                <td class="py-3 px-4 font-medium"><%= job.company_name %></td>
                <td class="py-3 px-4"><%= job.position %></td>
                <td class="py-3 px-4">
                  <span class="px-3 py-1 text-xs font-semibold rounded-full bg-<%= job.status_color %>-100 text-<%= job.status_color %>-800">
                    <%= job.status.capitalize %>
                  </span>
                </td>
                <td class="py-3 px-4 text-gray-500"><%= job.created_at.strftime("%b %d, %Y") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center text-gray-500 py-10">
        No recent applications yet. <%= link_to "Add one now ‚Üí", new_job_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
      </div>
    <% end %>
  </div>

  <!-- Footer -->
  <footer class="text-center text-gray-400 text-sm mt-12">
    Built with ‚ù§Ô∏è using Ruby on Rails & TailwindCSS
  </footer>
</div>
