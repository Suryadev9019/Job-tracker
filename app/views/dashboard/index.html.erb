<div class="max-w-6xl mx-auto px-6 py-10 bg-gray-50 min-h-screen">
  <h1 class="text-4xl font-extrabold mb-10 text-gray-900 flex items-center gap-3">
    ðŸ“Š My Job Tracker Dashboard
  </h1>

  <!-- Stats Section -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
    <% stats = [
      { title: "Total Jobs", value: @total_jobs, color: "blue" },
      { title: "Pending", value: @pending_jobs, color: "amber" },
      { title: "Interview", value: @interview_jobs, color: "green" },
      { title: "Rejected", value: @rejected_jobs, color: "rose" }
    ] %>

    <% stats.each do |s| %>
      <div class="group relative bg-gradient-to-br from-<%= s[:color] %>-100 to-white border border-<%= s[:color] %>-200 p-6 rounded-2xl shadow hover:shadow-lg transition duration-300">
        <div class="absolute right-4 top-4 text-<%= s[:color] %>-300 text-5xl opacity-10 select-none">â˜…</div>
        <h2 class="text-lg font-semibold text-<%= s[:color] %>-900"><%= s[:title] %></h2>
        <p class="text-4xl font-extrabold text-<%= s[:color] %>-700 mt-3 group-hover:scale-105 transition-transform duration-300">
          <%= s[:value] %>
        </p>
      </div>
    <% end %>
  </div>

  <!-- Charts Section -->
  <div class="bg-white rounded-2xl shadow p-8 border border-gray-100">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-2xl font-semibold text-gray-800">ðŸ“ˆ Applications Overview</h2>
      <button class="text-sm text-blue-600 hover:text-blue-800 font-medium">
        View Details â†’
      </button>
    </div>
    <div class="h-64 flex items-center justify-center text-gray-400 border-2 border-dashed border-gray-200 rounded-xl">
      Charts will appear here soon
    </div>
  </div>
</div>
