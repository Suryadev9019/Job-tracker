<h1 class="text-2xl font-bold mb-4">Upload Resume</h1>

<%= form_with(model: @resume, local: true, html: { multipart: true }) do |form| %>
  <div class="mb-4">
    <%= form.label :file, "Choose your resume (PDF or DOCX):", class: "block font-semibold mb-2" %>
    <%= form.file_field :file, accept: ".pdf,.docx", class: "border rounded p-2 w-full" %>
  </div>

  <div>
    <%= form.submit "Upload & Extract", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>
<% end %>
