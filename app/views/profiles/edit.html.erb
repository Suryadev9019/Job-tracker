<h1 class="text-2xl font-bold mb-4">Complete Your Profile</h1>

<%= form_with model: @user, url: profile_path, method: :patch, local: true do |f| %>
  <div class="mb-4">
    <%= f.label :city, class: "block font-semibold" %>
    <%= f.text_field :city, class: "border p-2 rounded w-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :address, class: "block font-semibold" %>
    <%= f.text_field :address, class: "border p-2 rounded w-full" %>
  </div>

  <%= f.submit "Save", class: "bg-blue-600 text-white px-4 py-2 rounded" %>
<% end %>
