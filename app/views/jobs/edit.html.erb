<div class="max-w-2xl mx-auto mt-10 bg-white shadow-lg rounded-xl p-6">
  <h1 class="text-2xl font-bold mb-6 text-center text-blue-600">✏️ Edit Job</h1>

  <%= form_with(model: @job, local: true, class: "space-y-4") do |f| %>
    
    <div>
      <%= f.label :title, "Job Title", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :title, class: "w-full mt-1 p-2 border border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= f.label :company, "Company Name", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :company, class: "w-full mt-1 p-2 border border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= f.label :location, "Location", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :location, class: "w-full mt-1 p-2 border border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= f.label :status, "Application Status", class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :status, ["pending", "interview", "rejected", "offer"], {}, class: "w-full mt-1 p-2 border border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= f.label :applied_on, "Applied Date", class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_field :applied_on, class: "w-full mt-1 p-2 border border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= f.label :description, "Job Description / Notes", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :description, rows: 4, class: "w-full mt-1 p-2 border border-gray-300 rounded-md" %>
    </div>

    <div class="flex justify-between items-center mt-6">
      <%= link_to "← Back", jobs_path, class: "text-gray-600 hover:underline" %>
      <%= f.submit "Update Job", class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700" %>
    </div>

  <% end %>
</div>
