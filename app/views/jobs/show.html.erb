<div class="max-w-2xl mx-auto mt-10 bg-white shadow-lg rounded-xl p-6">
  <h1 class="text-2xl font-bold mb-4"><%= @job.title %></h1>

  <div class="space-y-3">
    <p><strong>Company:</strong> <%= @job.company %></p>
    <p><strong>Location:</strong> <%= @job.location %></p>
    <p><strong>Status:</strong> 
      <span class="px-2 py-1 bg-gray-200 rounded-lg">
        <%= @job.status %>
      </span>
    </p>

    <% if @job.applied_on.present? %>
      <p><strong>Applied On:</strong> <%= @job.applied_on %></p>
    <% end %>

    <% if @job.description.present? %>
      <p><strong>Description:</strong><br>
      <%= simple_format(@job.description) %></p>
    <% end %>

    <% if @job.notes.present? %>
      <p><strong>Notes:</strong><br>
      <%= simple_format(@job.notes) %></p>
    <% end %>
  </div>

  <div class="mt-6 flex items-center justify-between">
    <%= link_to "Back", jobs_path, class: "text-blue-600 underline" %>

    <div class="space-x-3">
      <%= link_to "Edit", edit_job_path(@job), class: "px-4 py-2 bg-yellow-500 text-white rounded-lg" %>
      <%= link_to "Delete", job_path(@job), method: :delete, data: { confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-600 text-white rounded-lg" %>
    </div>
  </div>
</div>
