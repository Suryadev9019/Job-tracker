<div class="max-w-3xl mx-auto p-6">
  <!-- Page Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-800">Add a New Job</h1>
    <p class="text-gray-500 text-sm mt-1">Track your application by filling in the details below.</p>
  </div>

  <!-- Job Form -->
  <div class="bg-white p-6 rounded-2xl shadow">
    <%= form_with(model: @job, local: true, class: "space-y-6") do |f| %>
      
      <!-- Job Title -->
      <div>
        <%= f.label :title, "Job Title", class: "block font-semibold text-gray-700 mb-1" %>
        <%= f.text_field :title, class: "w-full border rounded-lg p-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
      </div>

      <!-- Company -->
      <div>
        <%= f.label :company, "Company", class: "block font-semibold text-gray-700 mb-1" %>
        <%= f.text_field :company, class: "w-full border rounded-lg p-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
      </div>

      <!-- Location -->
      <div>
        <%= f.label :location, "Location", class: "block font-semibold text-gray-700 mb-1" %>
        <%= f.text_field :location, class: "w-full border rounded-lg p-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
      </div>

      <!-- Status -->
      <div>
        <%= f.label :status, "Status", class: "block font-semibold text-gray-700 mb-1" %>
        <%= f.select :status, ["Applied", "Interview", "Offer", "Rejected"], {}, class: "w-full border rounded-lg p-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
      </div>

      <!-- Applied Date -->
      <div>
        <%= f.label :applied_on, "Applied On", class: "block font-semibold text-gray-700 mb-1" %>
        <%= f.date_field :applied_on, class: "w-full border rounded-lg p-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
      </div>

      <!-- Submit Button -->
      <div class="flex items-center space-x-3">
        <%= f.submit "Save Job", class: "bg-blue-600 text-white px-5 py-2 rounded-lg shadow hover:bg-blue-700 transition" %>
        <%= link_to "Cancel", jobs_path, class: "text-gray-600 hover:underline" %>
      </div>

    <% end %>
  </div>
</div>
